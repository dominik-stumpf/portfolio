{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noUnusedVariables": "off"
      },
      "nursery": {
        "all": true,
        "noUndeclaredDependencies": "off",
        "noConsole": "off",
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noRedundantUseStrict": "off",
        "noArrayIndexKey": "off",
        "noConfusingLabels": "off",
        "noImplicitAnyLet": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "noNonNullAssertion": "warn",
        "useConst": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "useButtonType": "warn"
      },
      "complexity": {
        "noUselessFragments": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all"
    }
  },
  "files": {
    "ignore": ["node_modules", ".svelte-kit", ".vercel"]
  }
}
